{
    "title": "Wi-Fi Position",
    "description": "WIFI request",
    "type": "object",
    "properties": {
        "appId": {
            "type": "string",
            "const": "WIFI"
        },
        "messageType": {
            "type": "string",
            "const": "DATA"
        },
        "config": {
            "type": "object",
            "properties": {
                "doReply": {
                    "$ref": "#/definitions/DoReply"
                }
            },
            "additionalProperties": false
        },
        "data": {
            "type": "object",
            "properties": {
                "doReply": {
                    "$ref": "#/definitions/DoReply",
                    "deprecated": true
                },
                "accessPoints": {
                    "type": "array",
                    "description": "At least two access points are required",
                    "items": {
                        "type": "object",
                        "properties": {
                            "macAddress": {
                                "$ref": "#/definitions/MacAddress"
                            },
                            "ssid": {
                                "$ref": "#/definitions/Ssid"
                            },
                            "signalStrength": {
                                "$ref": "#/definitions/SignalStrength"
                            },
                            "frequency": {
                                "$ref": "#/definitions/Frequency"
                            },
                            "channel": {
                                "$ref": "#/definitions/Channel"
                            }
                        },
                        "required": [
                            "macAddress"
                        ],
                        "additionalProperties": false
                    }
                }
            },
            "required": [
                "accessPoints"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "data"
    ],
    "definitions": {
        "DoReply": {
            "type": "boolean",
            "description": "Controls the response body. If boolean false or number 0, response body will be empty.",
            "default": true
        },
        "MacAddress": {
            "type": "string",
            "description": "String comprised of 6 hexadecimal pairs, separated by colons or dashes"
        },
        "Ssid": {
            "type": "string",
            "description": "Name of Wi-Fi network"
        },
        "SignalStrength": {
            "type": "integer",
            "description": "Signal strength in dBm",
            "minimum": -128,
            "maximum": 0
        },
        "Frequency": {
            "type": "integer",
            "description": "Channel frequency in MHz (only one of Channel or Frequency should be used)"
        },
        "Channel": {
            "type": "integer",
            "description": "Channel number (only one of Channel or Frequency should be used)"
        }
    }
}
